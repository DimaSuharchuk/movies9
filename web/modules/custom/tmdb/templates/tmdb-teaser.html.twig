<a href="{{ path('mvs.tmdb_node_redirect', {'bundle': bundle, 'tmdb_id': tmdb_id}) }}" class="col-lg-2">

  <article class="node-teaser">
    <div class="field field-poster">
      {% if poster %}
        <img src="//image.tmdb.org/t/p/w185{{ poster }}" alt="{{ title }}" title="{{ title }}">
      {% endif %}
    </div>

    {{ imdb_rating }}

    <div class="field field-title">{{ title }}</div>

    {% if original_title %}
      <div class="field field-original-title">{{ original_title }}</div>
    {% endif %}
  </article>

</a>
