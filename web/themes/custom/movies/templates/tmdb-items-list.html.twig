{% set classes = create_attribute({'class': ['items-list-wrapper']}) %}

{% if use_container %}
  {% set classes = classes.addClass('container') %}
{% endif %}

<div{{ classes }}>

  <div class="actions">
    <div class="with-photo">
      <label for="with-photo">{{ 'with photo only'|t }}</label>
      <input type="checkbox" id="with-photo" checked>
      {{ attach_library('movies/person-with-photo') }}
    </div>
  </div>

  {% if title %}
    <div class="items-list-title">
      {{ title }}
    </div>
  {% endif %}

  <div class="items-list-content responsive-grid">
    {% for item in items %}
      {{ item }}
    {% endfor %}
  </div>
</div>
