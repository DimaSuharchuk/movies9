<section class="season-wrapper container">
  <div class="seasons-block-title">{{ 'Seasons'|t }}</div>

  <div class="seasons-tabs">{{ tabs }}</div>

  <div class="season-poster">
    {% if poster_path %}
      <img src="//image.tmdb.org/t/p/w400{{ poster_path }}" alt="{{ title }}" title="{{ title }}" width="400" height="600">
    {% endif %}
  </div>

  <div class="season-info">
    {{ original_title }}
    <div class="field field-title">{{ title }}</div>
    <div class="episodes-count">
      {{ episodes_count }}
    </div>
    <div class="field field-overview">{{ overview }}</div>
  </div>
</section>

<section class="episodes-wrapper bg-white">
  <div class="container">
    {{ episodes }}
  </div>
</section>
